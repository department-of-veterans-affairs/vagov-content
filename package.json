{
  "name": "vagov-content",
  "version": "0.0.1",
  "description": "Content files for VA.gov",
  "engines": {
    "node": "8.10.0",
    "yarn": "1.5.1"
  },
  "scripts": {
    "vagov-apps:clone": "git clone --single-branch --depth=1 https://github.com/department-of-veterans-affairs/vets-website ../vagov-apps",
    "vagov-apps:install": "cd ../vagov-apps && yarn install --production=false",
    "vagov-apps:build": "INSTALL_HOOKS=no npm --prefix ../vagov-apps run build -- --content-deployment --content-directory=${PWD}/pages --entry static-pages --brand-consolidation-enabled",
    "vagov-apps:http": "../vagov-apps/node_modules/http-server build/localhost",
    "preinstall": "npm run vagov-apps:clone && npm run vagov-apps:install && vagov-apps:build",
    "postinstall": "npm run vagov-apps:http"
  }
}
